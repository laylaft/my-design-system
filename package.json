{
  "name": "my-design-system",
  "version": "1.0.0",
  "description": "A modern design system built with React, Storybook, and Tailwind CSS.",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src",
    "dist",
    "storybook-static"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "storybook": "storybook dev -p 6006",
    "build": "storybook build",
    "build-storybook": "storybook build",
    "test": "vitest --browser.name=chromium",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,md,json}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,md,json}",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist storybook-static node_modules/.cache",
    "preview": "npm run build && npx serve storybook-static"
  },
  "keywords": [
    "design-system",
    "storybook",
    "react",
    "tailwind",
    "components",
    "ui",
    "design-tokens"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/my-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/my-design-system/issues"
  },
  "homepage": "https://github.com/yourusername/my-design-system#readme",
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-vitest": "^9.1.13",
    "@storybook/react-vite": "^9.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.4.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "prop-types": "^15.8.1",
    "serve": "^14.2.1",
    "storybook": "^9.1.13",
    "vitest": "^3.2.4"
  }
}
